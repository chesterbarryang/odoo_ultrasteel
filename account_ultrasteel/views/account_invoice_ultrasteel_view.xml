<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record model="ir.ui.view" id="account_invoice_ultrasteel_view">
        <field name="name">account_ultrasteel.account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form" />
        <field name="priority" eval="900"/>
        <field name="arch" type="xml">
            <button name="invoice_open" position="after">
              <button name="invoice_approve" states="open" string="For Approval" class="oe_highlight" groups="base.group_user"/>
            </button>

            <button name="%(account.action_account_invoice_payment)d" position="attributes">
                <attribute name="states">approve</attribute>
            </button>

            <button name="%(account.action_account_invoice_refund)d" position="replace">
                <button name="%(account.action_account_invoice_refund)d" type='action' string='Ask Refund' groups="account.group_account_invoice" attrs="{'invisible': ['|',('type', '=', 'in_refund'),('state','not in',('open','approve','paid'))]}"/>
            </button>

            <field name="state" position="attributes">
                <attribute name="statusbar_visible">draft,open,approve,paid</attribute>
            </field>
        </field>
    </record>



</data>
</openerp>