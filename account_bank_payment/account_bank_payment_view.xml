<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<record model="ir.ui.view" id="account_bank_payment_view">
  <field name="name">account.bank.payment.invoice.form</field>
  <field name="model">account.payment</field>
  <field name="inherit_id" ref="account.view_account_payment_invoice_form" />
  <field name="priority" eval="10"/>
  <field name="arch" type="xml">
    <field name="communication" position="after">
      <field name="x_bank_name" attrs="{'invisible': [('x_payment_type', '=', 'bank')]"/>
      <field name="x_bank_branch" attrs="{'invisible': [('x_payment_type', '=', 'cash')]"/>
      <field name="x_cheque_no" attrs="{'invisible': [('x_payment_type', '=', 'cash')]"/>
    </field>
  </field>
</record>

</data>
</openerp>